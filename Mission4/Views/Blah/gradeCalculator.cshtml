@model gradeCalculatorModel;
<!--Grade Calculator-->
<div class="all">
<h1 class="center">Grade Calculator</h1>
<h2 class="center">(Enter a grade percentage for each category):</h2>
<form method="post" class="center">
    <label>Assignments:</label>
    <input id="assignment" asp-for="assignment" /><br />
    <label>Group Project:</label>
    <input id="group_project" asp-for="group_project" /><br />
    <label>Quizzes:</label>
    <input id="quiz" asp-for="quiz" /><br />
    <label>Midterm Exam:</label>
    <input id="midterm" asp-for="midterm" /><br />
    <label>Final Exam:</label>
    <input id="final" asp-for="final" /><br />
    <label>INTEX:</label>
    <input id="intex" asp-for="intex" /><br />
    <br /><br />
    <input id="btnSend" type="submit" value="Enter" class="button button1" />
    <br /><br />
    <h2>Final Grade: </h2>
    <h4 id="percent-grade"></h4>
    <h4 id="letter-grade"></h4>
    <div asp-validation-summary="All"></div>
    <br /><br /><br /><br />
</form>
</div>
<!--Script tags-->
<script src="~/js/gradeCalculator.js"></script>
